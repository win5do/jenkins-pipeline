pipeline {
    agent none

    environment {
        GIT_PASS = 'win5do'
        REPO = 'https://github.com/win5do/go-hello-docker.git'
        CICD = 'https://github.com/win5do/jenkins-pipeline.git'
        VERSION = '1.0.0'
        REGISTRY_PASS = 'dockerhub'
        REGISTRY_URL = 'https://registry.hub.docker.com'
        REGISTRY_NAME = 'win5do/first'
    }

    parameters {
        choice name: 'BRANCH', choices: ['master']
    }

    stages {
        stage('build') {
            agent {
                docker {
                    image 'golang:1.12.5'
                    args  '-u root'
                }
            }

            steps {
                git branch: "${params.BRANCH}", url: "${REPO}", credentialsId: "${GIT_PASS}"
                sh './build.sh'
                dir('cicd') {
                    git branch: 'cicd', url: "${CICD}", credentialsId: "${GIT_PASS}"
                }
                sh 'ls -l'
                sh 'cp cicd/Dockerfile .'
                script {
                    def latestImage = docker.build("${REGISTRY_NAME}:latest")
                    def versionImage = docker.build("${REGISTRY_NAME}:${VERSION}")
                    docker.withRegistry("${REGISTRY_URL}",  "${REGISTRY_PASS}") {
                        latestImage.push()
                        versionImage.push()
                    }
                }
            }
        }

        stage('deploy') {
            steps {
                echo 'todo deploy'
            }
        }
    }
}
